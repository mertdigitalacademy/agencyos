# ============================================
# AgencyOS Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# ============================================

# ============================================
# SUPABASE (Required for multi-user deployment)
# ============================================
# Get these from: https://app.supabase.com/project/_/settings/api

# PostgreSQL connection string (use Transaction pooler for serverless)
AGENCYOS_DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# Supabase project URL
SUPABASE_URL=https://[project-ref].supabase.co

# Supabase service role key (for backend - keep secret!)
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase anonymous key (for frontend - safe to expose)
VITE_SUPABASE_URL=https://[project-ref].supabase.co
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================
# AI API KEYS (At least one required)
# ============================================

# OpenRouter API Key (recommended - access to multiple models)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-...

# Gemini API Key (alternative to OpenRouter)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=AIzaSy...

# ============================================
# COUNCIL CONFIGURATION (Optional)
# ============================================

# Models to use for council opinions (comma-separated)
# Default: openai/gpt-5-mini, anthropic/claude-sonnet-4, google/gemini-2.5-flash
COUNCIL_MODELS=openai/gpt-5-mini, anthropic/claude-sonnet-4, google/gemini-2.5-flash

# Model to use for chairman synthesis
# Default: openai/gpt-5-mini
COUNCIL_CHAIRMAN_MODEL=openai/gpt-5-mini

# Enable Stage 2 ranking (slower but more accurate)
# Default: false
COUNCIL_STAGE2_ENABLED=false

# ============================================
# OPTIONAL INTEGRATIONS
# ============================================

# n8n Automation Platform
N8N_BASE_URL=http://localhost:5678
N8N_API_KEY=

# SuiteCRM
SUITECRM_BASE_URL=http://localhost:8091
SUITECRM_CLIENT_ID=
SUITECRM_CLIENT_SECRET=

# InvoiceShelf
INVOICESHELF_BASE_URL=http://localhost:8090
INVOICESHELF_API_KEY=

# Documenso (Document Signing)
DOCUMENSO_BASE_URL=http://localhost:8092
DOCUMENSO_API_KEY=

# Infisical (Secrets Management)
INFISICAL_BASE_URL=http://localhost:8081
INFISICAL_CLIENT_ID=
INFISICAL_CLIENT_SECRET=
INFISICAL_WORKSPACE_ID=
INFISICAL_SECRET_PATH=/

# ============================================
# DEVELOPMENT
# ============================================

# Environment name (Development, Staging, Production)
AGENCYOS_ENV=Development

# API port (for local development)
PORT=3001
