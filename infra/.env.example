# Copy to `infra/.env` and edit as needed.
#
# Start core services:
#   docker compose -f infra/docker-compose.yml up -d
#
# Start optional integrations:
#   docker compose -f infra/docker-compose.yml --profile infisical --profile invoiceshelf --profile suitecrm --profile documenso up -d

# --- AgencyOS Postgres (optional, profile: agencyosdb) ------------------------
AGENCYOS_DB_PORT=5434
AGENCYOS_DB_USER=agencyos
AGENCYOS_DB_PASSWORD=agencyos
AGENCYOS_DB_NAME=agencyos

# --- n8n ---------------------------------------------------------------------
N8N_PORT=5678
N8N_HOST=localhost
N8N_PROTOCOL=http
N8N_WEBHOOK_URL=http://localhost:5678

N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin

# Change this for any real usage (min 32 chars recommended)
N8N_ENCRYPTION_KEY=change-me-change-me-change-me-change-me

N8N_DB_PORT=5433
N8N_DB_USER=n8n
N8N_DB_PASSWORD=n8n
N8N_DB_NAME=n8n

# --- Infisical (optional, profile: infisical) --------------------------------
INFISICAL_PORT=8081
INFISICAL_SITE_URL=http://localhost:8081
INFISICAL_POSTGRES_USER=infisical
INFISICAL_POSTGRES_PASSWORD=infisical
INFISICAL_POSTGRES_DB=infisical

# Change these for any real usage
INFISICAL_ENCRYPTION_KEY=f13dbc92aaaf86fa7cb0ed8ac3265f47
INFISICAL_AUTH_SECRET=5lrMXKKWCVocS/uerPsl7V+TX/aaUaI7iDkgl3tSmLE=

# --- InvoiceShelf (optional, profile: invoiceshelf) ---------------------------
INVOICESHELF_PORT=8090
INVOICESHELF_APP_URL=http://localhost:8090

# --- SuiteCRM (optional, profile: suitecrm) ----------------------------------
SUITECRM_PORT=8091
SUITECRM_ADMIN_USER=admin
SUITECRM_ADMIN_PASSWORD=admin
SUITECRM_ADMIN_EMAIL=admin@example.com

SUITECRM_DB_ROOT_PASSWORD=suitecrmroot
SUITECRM_DB_NAME=suitecrm
SUITECRM_DB_USER=suitecrm
SUITECRM_DB_PASSWORD=suitecrm

# --- Documenso (optional, profile: documenso) --------------------------------
DOCUMENSO_PORT=8092
DOCUMENSO_WEBAPP_URL=http://localhost:8092
DOCUMENSO_INTERNAL_WEBAPP_URL=http://documenso:8092

DOCUMENSO_POSTGRES_USER=documenso
DOCUMENSO_POSTGRES_PASSWORD=documenso
DOCUMENSO_POSTGRES_DB=documenso

# Required (replace with secure random values)
DOCUMENSO_NEXTAUTH_SECRET=change-me
DOCUMENSO_ENCRYPTION_KEY=change-me-change-me-change-me-32chars
DOCUMENSO_ENCRYPTION_SECONDARY_KEY=change-me-change-me-change-me-32chars

# SMTP is required by Documenso; set these for a real run
DOCUMENSO_SMTP_TRANSPORT=smtp-auth
DOCUMENSO_SMTP_HOST=mailhog
DOCUMENSO_SMTP_PORT=1025
DOCUMENSO_SMTP_SECURE=false
DOCUMENSO_SMTP_UNSAFE_IGNORE_TLS=true
DOCUMENSO_SMTP_USERNAME=
DOCUMENSO_SMTP_PASSWORD=
DOCUMENSO_SMTP_FROM_NAME=AgencyOS
DOCUMENSO_SMTP_FROM_ADDRESS=no-reply@example.com

# Documenso signing certificate (.p12)
DOCUMENSO_CERT_PATH=../data/certs/documenso/cert.p12
DOCUMENSO_SIGNING_PASSPHRASE=change-me

# Mailhog (Documenso local SMTP; profile: documenso)
MAILHOG_SMTP_PORT=1025
MAILHOG_UI_PORT=8025
